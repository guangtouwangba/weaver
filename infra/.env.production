# Production environment configuration for Research Agent RAG System

# ===== API KEYS (SET THESE IN YOUR DEPLOYMENT PLATFORM) =====
# OPENAI_API_KEY=your_production_openai_key
# DEEPSEEK_API_KEY=your_production_deepseek_key  
# ANTHROPIC_API_KEY=your_production_anthropic_key

# ===== PROVIDER CONFIGURATION =====
DEFAULT_PROVIDER=deepseek

# ===== MODEL CONFIGURATION =====
OPENAI_MODEL=gpt-4o-mini
DEEPSEEK_MODEL=deepseek-chat
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ===== AGENT CONFIGURATION =====
# All agents use DeepSeek for cost optimization in production
GOOGLE_ENGINEER_PROVIDER=deepseek
GOOGLE_ENGINEER_MODEL=deepseek-chat
MIT_RESEARCHER_PROVIDER=deepseek
MIT_RESEARCHER_MODEL=deepseek-chat
INDUSTRY_EXPERT_PROVIDER=deepseek
INDUSTRY_EXPERT_MODEL=deepseek-chat
PAPER_ANALYST_PROVIDER=deepseek
PAPER_ANALYST_MODEL=deepseek-chat

# ===== SEARCH CONFIGURATION =====
MIN_SIMILARITY_THRESHOLD=0.6
ENABLE_ARXIV_FALLBACK=true
ARXIV_FALLBACK_MAX_PAPERS=5
ENABLE_QUERY_EXPANSION=true
MAX_QUERY_EXPANSIONS=2

# ===== PERFORMANCE SETTINGS =====
DEFAULT_MAX_PAPERS=15
MAX_PAPERS_PER_QUERY=30
ENABLE_AGENT_DISCUSSIONS=true

# ===== DATABASE CONFIGURATION =====
VECTOR_DB_PATH=/app/data/vector_db
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FILE=/app/logs/research_agent.log

# ===== SERVER CONFIGURATION =====
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=*

# ===== CACHE SETTINGS =====
RESEARCH_TOPICS_CACHE_TTL=7200

# ===== SECURITY SETTINGS =====
# Enable security features for production
ENABLE_API_KEY_AUTH=false
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60