VECTOR_DB_PROVIDER=weaviate

# ===== CACHE CONFIGURATION =====

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_URL=redis://:redis_password@redis:6379/0

# ===== CELERY CONFIGURATION =====

# Celery Broker and Result Backend (using Redis)
CELERY_BROKER_URL=redis://:redis_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_password@redis:6379/0

# Celery Task Configuration
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Celery Worker Configuration
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_ACKS_LATE=true
CELERY_RESULT_EXPIRES=3600

# Celery Retry Configuration
CELERY_TASK_DEFAULT_RETRY_DELAY=60
CELERY_TASK_MAX_RETRIES=3

# Celery Queue Configuration
CELERY_DEFAULT_QUEUE=default
CELERY_RESEARCH_QUEUE=research
CELERY_PROCESSING_QUEUE=processing

# Celery Monitoring
CELERY_FLOWER_PORT=5555
CELERY_FLOWER_BASIC_AUTH=admin:flower_password

# ===== ELASTICSEARCH CONFIGURATION =====

# Elasticsearch Configuration
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=job-logs

# Kibana Configuration
KIBANA_PORT=5601
KIBANA_URL=http://kibana:5601

