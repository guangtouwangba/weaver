# Development environment configuration for Research Agent RAG System

# ===== API KEYS =====
# Copy your development API keys here
OPENAI_API_KEY=your_dev_openai_key
DEEPSEEK_API_KEY=your_dev_deepseek_key
ANTHROPIC_API_KEY=your_dev_anthropic_key

# ===== PROVIDER CONFIGURATION =====
DEFAULT_PROVIDER=deepseek

# ===== MODEL CONFIGURATION =====
OPENAI_MODEL=gpt-4o-mini
DEEPSEEK_MODEL=deepseek-chat
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ===== AGENT CONFIGURATION =====
# Mixed providers for development testing
GOOGLE_ENGINEER_PROVIDER=openai
GOOGLE_ENGINEER_MODEL=gpt-4o-mini
MIT_RESEARCHER_PROVIDER=anthropic
MIT_RESEARCHER_MODEL=claude-3-5-sonnet-20241022
INDUSTRY_EXPERT_PROVIDER=deepseek
INDUSTRY_EXPERT_MODEL=deepseek-chat
PAPER_ANALYST_PROVIDER=openai
PAPER_ANALYST_MODEL=gpt-4o-mini

# ===== SEARCH CONFIGURATION =====
MIN_SIMILARITY_THRESHOLD=0.5
ENABLE_ARXIV_FALLBACK=true
ARXIV_FALLBACK_MAX_PAPERS=10
ENABLE_QUERY_EXPANSION=true
MAX_QUERY_EXPANSIONS=3

# ===== PERFORMANCE SETTINGS =====
DEFAULT_MAX_PAPERS=20
MAX_PAPERS_PER_QUERY=50
ENABLE_AGENT_DISCUSSIONS=true

# ===== DATABASE CONFIGURATION =====
VECTOR_DB_PATH=./data/vector_db
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=DEBUG
LOG_FILE=./logs/research_agent.log

# ===== SERVER CONFIGURATION =====
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# ===== CACHE SETTINGS =====
RESEARCH_TOPICS_CACHE_TTL=3600

# ===== DEVELOPMENT SETTINGS =====
ENABLE_API_KEY_AUTH=false
ENABLE_RATE_LIMITING=false
DEBUG_MODE=true