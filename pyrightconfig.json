{
  // Pyright/Pylance 配置
  // 这是 Cursor 使用的 Python 语言服务器配置文件
  
  "include": [
    "packages/**",
    "apps/**"
  ],
  
  "exclude": [
    "**/__pycache__",
    "**/.pytest_cache",
    "**/.ruff_cache",
    "**/.mypy_cache",
    "**/*.egg-info",
    ".venv",
    "venv",
    "node_modules"
  ],
  
  // 额外的搜索路径（让 Pyright 能找到内部包）
  "extraPaths": [
    "./packages/rag-core",
    "./packages/shared-config",
    "./packages/domain-models",
    "./apps/api"
  ],
  
  // Python 版本
  "pythonVersion": "3.12",
  
  // 类型检查模式
  "typeCheckingMode": "basic",
  
  // 报告类型错误
  "reportMissingImports": true,
  "reportMissingTypeStubs": false,
  
  // 启用类型存根（Pyright 会自动从 site-packages 读取）
  
  // 自动导入
  "autoImportCompletions": true,
  
  // 严格模式（可选，根据需要调整）
  "strictListInference": false,
  "strictDictionaryInference": false,
  "strictSetInference": false
}



