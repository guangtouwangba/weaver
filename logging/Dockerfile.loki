FROM grafana/loki:latest

# Copy custom configuration
COPY loki-config.yaml /etc/loki/local-config.yaml

# Expose Loki port
EXPOSE 3100

# Note: For Zeabur deployment, Volume should be configured via Zeabur console
# not in Dockerfile. Remove VOLUME declaration to avoid mount conflicts.

# Run Loki with custom config
ENTRYPOINT ["/usr/bin/loki"]
CMD ["-config.file=/etc/loki/local-config.yaml"]

