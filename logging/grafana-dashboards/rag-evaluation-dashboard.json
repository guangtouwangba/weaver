{
  "dashboard": {
    "title": "RAG Evaluation Metrics",
    "tags": ["rag", "evaluation", "quality"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Average Faithfulness (24h)",
        "description": "Faithfulness measures if the answer is grounded in retrieved contexts (no hallucination)",
        "type": "stat",
        "targets": [
          {
            "expr": "avg_over_time({service=\"rag-evaluation\"} | json | unwrap metrics_faithfulness [24h])",
            "refId": "A",
            "legendFormat": "Faithfulness"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.8, "color": "yellow"},
                {"value": 0.9, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4}
      },
      {
        "id": 2,
        "title": "Average Answer Relevancy (24h)",
        "description": "Measures if the answer directly addresses the question",
        "type": "stat",
        "targets": [
          {
            "expr": "avg_over_time({service=\"rag-evaluation\"} | json | unwrap metrics_answer_relevancy [24h])",
            "refId": "A",
            "legendFormat": "Answer Relevancy"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.85, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4}
      },
      {
        "id": 3,
        "title": "Average Context Precision (24h)",
        "description": "Precision of retrieved contexts",
        "type": "stat",
        "targets": [
          {
            "expr": "avg_over_time({service=\"rag-evaluation\"} | json | unwrap metrics_context_precision [24h])",
            "refId": "A",
            "legendFormat": "Context Precision"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.8, "color": "yellow"},
                {"value": 0.9, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4}
      },
      {
        "id": 4,
        "title": "Evaluation Count (24h)",
        "description": "Total number of evaluations performed",
        "type": "stat",
        "targets": [
          {
            "expr": "count_over_time({service=\"rag-evaluation\"} [24h])",
            "refId": "A",
            "legendFormat": "Total Evaluations"
          }
        ],
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4}
      },
      {
        "id": 5,
        "title": "Faithfulness Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "{service=\"rag-evaluation\"} | json | unwrap metrics_faithfulness",
            "refId": "A",
            "legendFormat": "Faithfulness"
          }
        ],
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 6}
      },
      {
        "id": 6,
        "title": "Answer Relevancy Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "{service=\"rag-evaluation\"} | json | unwrap metrics_answer_relevancy",
            "refId": "A",
            "legendFormat": "Answer Relevancy"
          }
        ],
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 6}
      },
      {
        "id": 7,
        "title": "Metrics by Chunking Strategy",
        "type": "bargauge",
        "targets": [
          {
            "expr": "avg by (chunking_strategy) ({service=\"rag-evaluation\"} | json | unwrap metrics_faithfulness)",
            "refId": "A",
            "legendFormat": "{{chunking_strategy}}"
          }
        ],
        "gridPos": {"x": 0, "y": 10, "w": 12, "h": 6}
      },
      {
        "id": 8,
        "title": "Metrics by Retrieval Mode",
        "type": "piechart",
        "targets": [
          {
            "expr": "count by (retrieval_mode) ({service=\"rag-evaluation\"})",
            "refId": "A",
            "legendFormat": "{{retrieval_mode}}"
          }
        ],
        "gridPos": {"x": 12, "y": 10, "w": 12, "h": 6}
      },
      {
        "id": 9,
        "title": "Low Faithfulness Alerts (< 0.8)",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=\"rag-evaluation\"} | json | metrics_faithfulness < 0.8 | line_format \"{{.question_preview}} - Faithfulness: {{.metrics_faithfulness}}\"",
            "refId": "A"
          }
        ],
        "gridPos": {"x": 0, "y": 16, "w": 24, "h": 6}
      },
      {
        "id": 10,
        "title": "Recent Evaluations (Detailed)",
        "type": "table",
        "targets": [
          {
            "expr": "{service=\"rag-evaluation\"} | json",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "includeByName": {
                "question_preview": true,
                "chunking_strategy": true,
                "retrieval_mode": true,
                "metrics_faithfulness": true,
                "metrics_answer_relevancy": true,
                "metrics_context_precision": true
              }
            }
          }
        ],
        "gridPos": {"x": 0, "y": 22, "w": 24, "h": 8}
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    }
  }
}

